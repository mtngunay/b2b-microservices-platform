{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Elasticsearch",
      "Serilog.Enrichers.Environment",
      "Serilog.Enrichers.Thread"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning",
        "Hangfire": "Information",
        "B2B": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithEnvironmentName",
      "WithThreadId"
    ],
    "Properties": {
      "Application": "B2B.Worker",
      "Version": "1.0.0"
    }
  },
  "Elasticsearch": {
    "Uri": "http://localhost:9200",
    "IndexFormat": "b2b-worker-logs-{0:yyyy.MM.dd}"
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "WriteDb": "Server=localhost;Database=B2B;User Id=sa;Password=YourPassword123!;TrustServerCertificate=True",
    "Redis": "localhost:6379",
    "RabbitMq": "amqp://guest:guest@localhost:5672"
  },
  "Hangfire": {
    "WorkerCount": 4,
    "Queues": [ "critical", "default", "low" ],
    "EnableDashboard": true,
    "DashboardPath": "/hangfire",
    "DashboardUsername": "admin",
    "DashboardPassword": "admin",
    "SchemaName": "HangFire",
    "JobExpirationTimeoutDays": 7,
    "ServerTimeoutMinutes": 5,
    "ServerCheckIntervalSeconds": 30
  },
  "JobRetry": {
    "MaxRetryAttempts": 5,
    "DelaysInSeconds": [ 10, 30, 60, 300, 900 ],
    "EnableFailureNotifications": true,
    "FailureNotificationEmail": null,
    "LogDetailedFailures": true
  },
  "Jwt": {
    "Secret": "your-super-secret-key-that-should-be-at-least-32-characters",
    "Issuer": "B2B.API",
    "Audience": "B2B.Client",
    "AccessTokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "RabbitMq": {
    "Host": "localhost",
    "Port": 5672,
    "Username": "guest",
    "Password": "guest",
    "VirtualHost": "/",
    "PrefetchCount": 16,
    "RetryCount": 5,
    "RetryIntervalSeconds": 5
  }
}
